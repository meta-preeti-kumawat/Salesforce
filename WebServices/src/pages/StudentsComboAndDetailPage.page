<apex:page Controller="StudentsDetailController">
    <apex:form >
        <apex:pageBlock title="Student">
            <apex:pageBlockSection columns="1" title="Select a Student">
                <apex:selectList value="{!selectedStudent}" size="1" multiselect="false">
                    <apex:selectOptions value="{!items}" />
                    <apex:actionSupport event="onchange" reRender="details" />
                </apex:selectList>
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:outputPanel id="details">
            <apex:pageBlock rendered="{!selectedStudent != null}">
                <apex:pageBlockSection columns="1">
                    <apex:detail subject="{!selectedStudent}" relatedList="false" title="false"/>
                </apex:pageBlockSection>
            </apex:pageBlock> 
        </apex:outputPanel>
    </apex:form>
</apex:page>